
<div class="well fs-5 mx-auto w-50 p-4 mb-4">
<h3>Add Comment</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
    <%= f.label :username %><br>
    <%= f.text_field(:username, {:class => "form-control"})%>
</p>
<p>
    <%= f.label :body %><br>
    <%= f.text_area(:body, {:class => "form-control"})%>
</p>
<p>
    <%= f.submit({:class => " btn"})%>
</p>
<%end%>
</div>