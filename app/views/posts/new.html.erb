<div class="form">
<h1>Add Post</h1>
<%= form_for :post, url: posts_path do |f| %>
    <% if @post.errors.any? %>
        <% @post.errors.full_messages.each do |msg| %>
          <div class="alert alert-danger"><%= msg %></div>
        <% end %>
    <% end %>
<p>
<%= f.label :title,{:class => "label"} %><br>
<%= f.text_field :title, {:class => "input"}  %>
</p>

<p>
<%= f.label :body ,{:class => "label"} %><br>
<%= f.text_area :body, {:class => "form-control", :size => "50x10"} %>
</p>
<p >
<%= f.submit :SubmitPost,{:class => "btn btn-primary"}  %>
</p>
<% end %>
</div>