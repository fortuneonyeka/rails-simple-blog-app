<div class="form">
<h1>Add Post</h1>
<%= form_for :post, url: posts_path do |f| %>
<p>
<%= f.label :title,{:class => "label"} %><br>
<%= f.text_field :title, {:class => "input"}  %>
</p>

<p>
<%= f.label :body ,{:class => "label"} %><br>
<%= f.text_area :body, {:class => "input", :size => "50x10"} %>
</p>
<p >
<%= f.submit :SubmitPost,{:class => "btn"}  %>
</p>
<% end %>
</div>