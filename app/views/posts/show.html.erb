<div class="well m-4 fs-5 mx-auto w-50 p-4">
<h2><%= @post.title%></h2>
<p><%= @post.body%></p>
<hr>
 <%= link_to "Edit Post", edit_post_path(@post), {:class => "text-decoration-none text-success"}%>
 <%= link_to "Delete Post",post_path(@post), 
                        method: :delete,
                        data: {confirm: "Are you sure?"},
                            :class => "text-decoration-none text-danger mx-3"%>
</div>

<hr>
<div>
<h1>Comments</h1>
<% @post.comments.each do |comment| %>
<div class=" fs-5 mx-auto w-50">
<p><strong><%= comment.username%></strong>: <%= comment.body%></p>
</div>
</div>
<%end%>
<div class="well fs-5 mx-auto w-50 p-4 mb-4">
<h3>Add Comment</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>
<p>
    <%= f.label :username %><br>
    <%= f.text_field(:username, {:class => "form-control"})%>
</p>
<p>
    <%= f.label :body %><br>
    <%= f.text_area(:body, {:class => "form-control"})%>
</p>
<p>
    <%= f.submit({:class => " btn"})%>
</p>
<%end%>
</div>